{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<main class="mx-lg-5">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Liste des articles</h1>
                    <button type="button" class="btn btn-success btn-rounded mb-5 mt-3"><a href="{{ path('article_new') }}" style="color: white;">Créer un article</a></button>
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Categorie</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td class="pt-4">{{ article.id }}</td>
                            <td class="pt-4"><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.nom }}</a></td>
                            <td class="pt-4">{{ article.categorie.nom }}</td>
                            <td>
                                <a href="{{ path('article_edit', {'id': article.id}) }}">
                                <button type="button" class="btn btn-warning">Modifier</button></a>
                            </td>
                            <td>
                                {{ include('article/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun article est crée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
    
{% endblock %}
